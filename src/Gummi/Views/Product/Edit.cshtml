@{
    ViewData["Title"] = "Gummi Bear Kingdom";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Gummi.Models.Product

<h2>Edit</h2>
<hr />
<h4>Edit this product: @Html.DisplayFor(model => model.name)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.ProductId)

    <p>@Html.LabelFor(model => model.name)</p> 
    <p>@Html.EditorFor(model => model.name)</p>

    <p>@Html.LabelFor(model => model.price)</p>
    <p>@Html.EditorFor(model => model.price)</p>

    <p>@Html.LabelFor(model => model.origin)</p>
    <p>@Html.EditorFor(model => model.origin)</p> 

    <input type="submit" value="Save" />
}
